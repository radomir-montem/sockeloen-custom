<style>
  :root {
    --sf-primary-bg: {{ section.settings.primary_bg_color }};
    --sf-secondary-bg: {{ section.settings.secondary_bg_color }};
    --sf-card-bg: {{ section.settings.card_bg_color }};
    --sf-accent-color: {{ section.settings.accent_color }};
    --sf-primary-text: {{ section.settings.primary_text_color }};
    --sf-secondary-text: {{ section.settings.secondary_text_color }};
    --sf-button-bg: {{ section.settings.button_bg_color }};
    --sf-button-text: {{ section.settings.button_text_color }};
    --sf-grid-color: {{ section.settings.grid_color }};
  }
  
  body { margin: 0; padding: 0; }
  
  .studio-flow-page {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: var(--sf-primary-text);
    background: var(--sf-primary-bg);
    min-height: 100vh;
    position: relative;
  }
  
  .studio-flow-page::before {
    content: '';
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background-image: 
      linear-gradient(var(--sf-grid-color) 1px, transparent 1px),
      linear-gradient(90deg, var(--sf-grid-color) 1px, transparent 1px);
    background-size: {{ section.settings.grid_size }}px {{ section.settings.grid_size }}px;
    pointer-events: none;
    z-index: 0;
    opacity: {{ section.settings.grid_opacity }}%;
  }
  
  .studio-flow-page > * { position: relative; z-index: 1; }
  
  .sf-hero {
    text-align: center;
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .sf-badge {
    display: inline-block;
    background: var(--sf-card-bg);
    color: var(--sf-secondary-text);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    margin-bottom: 30px;
    border: 1px solid {{ section.settings.badge_border_color }};
  }
  
  .sf-headline {
    font-size: 48px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 30px;
    color: var(--sf-primary-text);
  }
  
  .sf-headline strong,
  .sf-headline b {
    color: var(--sf-accent-color);
    font-weight: 700;
  }
  
  .sf-subheadline {
    font-size: 18px;
    color: var(--sf-secondary-text);
    margin-bottom: 30px;
    line-height: 1.6;
  }
  
  .sf-cta-btn {
    display: inline-block;
    background: var(--sf-button-bg);
    color: var(--sf-button-text);
    padding: 16px 40px;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s;
    box-shadow: 0 0 20px {{ section.settings.button_glow_color }};
  }
  
  .sf-cta-btn:hover {
    background: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 0 30px {{ section.settings.button_glow_hover_color }};
  }
  
  .sf-video-wrapper {
    max-width: 900px;
    margin: 50px auto;
    padding: 0 20px;
  }
  
  .sf-video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 10px 40px {{ section.settings.video_shadow_color }};
    border: 2px solid {{ section.settings.video_border_color }};
  }
  
  .sf-video-container iframe {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
  }
  
  .sf-logos {
    padding: 60px 20px;
    background: var(--sf-secondary-bg);
    text-align: center;
  }
  
  .sf-logos h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--sf-secondary-text);
    margin-bottom: 30px;
  }
  
  .sf-logo-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .sf-logo-grid img {
    height: 40px;
    width: auto;
    filter: grayscale({{ section.settings.logo_grayscale }}%);
    opacity: {{ section.settings.logo_opacity }}%;
    transition: all 0.3s;
  }
  
  .sf-logo-grid img:hover {
    filter: grayscale(0%);
    opacity: 100%;
  }
  
  .sf-reasons {
    padding: 80px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .sf-reasons h2 {
    text-align: center;
    font-size: 36px;
    margin-bottom: 60px;
    color: var(--sf-primary-text);
  }
  
  .sf-reasons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 40px;
  }
  
  .sf-reason-card {
    background: var(--sf-card-bg);
    border: 1px solid {{ section.settings.card_border_color }};
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 0 15px {{ section.settings.card_glow_color }};
    transition: all 0.3s;
  }
  
  .sf-reason-card:hover {
    border-color: var(--sf-accent-color);
    box-shadow: 0 0 25px {{ section.settings.card_glow_hover_color }};
    transform: translateY(-5px);
  }
  
  .sf-reason-number {
    font-size: 48px;
    font-weight: 700;
    color: var(--sf-accent-color);
    margin-bottom: 15px;
    text-shadow: 0 0 10px {{ section.settings.number_glow_color }};
  }
  
  .sf-reason-title {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 10px;
    color: var(--sf-primary-text);
  }
  
  .sf-reason-text {
    color: var(--sf-secondary-text);
    line-height: 1.6;
  }
  
  .sf-case-studies {
    padding: 80px 20px;
    background: var(--sf-secondary-bg);
  }
  
  .sf-case-study {
    max-width: 1200px;
    margin: 0 auto 80px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  .sf-case-study:nth-child(even) { direction: rtl; }
  .sf-case-study:nth-child(even) > * { direction: ltr; }
  
  .sf-case-content h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--sf-secondary-text);
    margin-bottom: 15px;
  }
  
  .sf-case-content h2 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.3;
    color: var(--sf-primary-text);
  }
  
  .sf-case-content p {
    color: var(--sf-secondary-text);
    font-size: 18px;
    line-height: 1.6;
  }
  
  .sf-case-image img {
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 10px 40px {{ section.settings.image_shadow_color }};
    border: 1px solid {{ section.settings.image_border_color }};
  }
  
  .sf-testimonial {
    text-align: center;
    padding: 80px 20px;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .sf-testimonial blockquote {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.5;
    margin-bottom: 20px;
    color: var(--sf-primary-text);
  }
  
  .sf-testimonial cite {
    font-size: 16px;
    color: var(--sf-secondary-text);
    font-style: normal;
  }
  
  .sf-gallery {
    padding: 80px 20px;
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .sf-gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .sf-gallery-item img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    border: 1px solid {{ section.settings.gallery_border_color }};
    transition: all 0.3s;
  }
  
  .sf-gallery-item img:hover {
    border-color: var(--sf-accent-color);
    box-shadow: 0 0 20px {{ section.settings.gallery_glow_color }};
    transform: scale(1.05);
  }
  
  .sf-footer {
    background: var(--sf-card-bg);
    color: var(--sf-primary-text);
    padding: 60px 20px;
    text-align: center;
    border-top: 1px solid {{ section.settings.footer_border_color }};
  }
  
  .sf-disclaimer {
    max-width: 900px;
    margin: 0 auto 30px;
    font-size: 12px;
    line-height: 1.6;
    color: var(--sf-secondary-text);
  }
  
  .sf-copyright {
    font-size: 14px;
    color: var(--sf-secondary-text);
  }
  
  .sf-highlight {
    color: var(--sf-accent-color);
  }
  
  @media (max-width: 768px) {
    .sf-headline { font-size: 32px; }
    .sf-case-study { grid-template-columns: 1fr; }
    .sf-case-study:nth-child(even) { direction: ltr; }
    .sf-case-content h2 { font-size: 24px; }
    .sf-testimonial blockquote { font-size: 20px; }
  }
</style>

<div class="studio-flow-page">
  
  <section class="sf-hero">
    {% if section.settings.hero_badge %}
      <div class="sf-badge">{{ section.settings.hero_badge }}</div>
    {% endif %}
    {% if section.settings.hero_headline %}
      <h1 class="sf-headline">{{ section.settings.hero_headline }}</h1>
    {% endif %}
    {% if section.settings.hero_subheadline %}
      <p class="sf-subheadline">{{ section.settings.hero_subheadline }}</p>
    {% endif %}
    {% if section.settings.hero_cta_text and section.settings.hero_cta_url %}
      <a href="{{ section.settings.hero_cta_url }}" class="sf-cta-btn">{{ section.settings.hero_cta_text }} ‚Üí</a>
    {% endif %}
  </section>
  
  {% if section.settings.video_url %}
  <section class="sf-video-wrapper">
    <div class="sf-video-container">
      <iframe src="{{ section.settings.video_url }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </section>
  {% endif %}
  
  <section class="sf-logos">
    {% if section.settings.logos_title %}
      <h3>{{ section.settings.logos_title }}</h3>
    {% endif %}
    <div class="sf-logo-grid">
      {% for block in section.blocks %}
        {% if block.type == 'logo' and block.settings.logo_image %}
          <img src="{{ block.settings.logo_image | img_url: '200x' }}" alt="{{ block.settings.logo_alt }}">
        {% endif %}
      {% endfor %}
    </div>
  </section>
  
  <section class="sf-reasons">
    {% if section.settings.reasons_title %}
      <h2>{{ section.settings.reasons_title }}</h2>
    {% endif %}
    <div class="sf-reasons-grid">
      {% for block in section.blocks %}
        {% if block.type == 'reason' %}
          <div class="sf-reason-card">
            <div class="sf-reason-number">{{ forloop.index }}.</div>
            <h3 class="sf-reason-title">{{ block.settings.reason_title }}</h3>
            <p class="sf-reason-text">{{ block.settings.reason_text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    {% if section.settings.reasons_cta_text and section.settings.reasons_cta_url %}
    <div style="text-align: center; margin-top: 60px;">
      <a href="{{ section.settings.reasons_cta_url }}" class="sf-cta-btn">{{ section.settings.reasons_cta_text }} ‚Üí</a>
    </div>
    {% endif %}
  </section>
  
  <section class="sf-case-studies">
    {% for block in section.blocks %}
      {% if block.type == 'case_study' %}
        <div class="sf-case-study">
          <div class="sf-case-content">
            {% if block.settings.case_category %}<h3>{{ block.settings.case_category }}</h3>{% endif %}
            {% if block.settings.case_headline %}<h2>{{ block.settings.case_headline }}</h2>{% endif %}
            {% if block.settings.case_description %}<p>{{ block.settings.case_description }}</p>{% endif %}
          </div>
          <div class="sf-case-image">
            {% if block.settings.case_image %}
              <img src="{{ block.settings.case_image | img_url: '800x' }}" alt="{{ block.settings.case_headline }}">
            {% elsif block.settings.case_video_url %}
              <div class="sf-video-container">
                <iframe src="{{ block.settings.case_video_url }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </section>
  
  {% if section.settings.testimonial_quote %}
  <section class="sf-testimonial">
    <blockquote>"{{ section.settings.testimonial_quote }}"</blockquote>
    {% if section.settings.testimonial_author %}<cite>{{ section.settings.testimonial_author }}</cite>{% endif %}
  </section>
  {% endif %}
  
  <section class="sf-gallery">
    <div class="sf-gallery-grid">
      {% for block in section.blocks %}
        {% if block.type == 'gallery_image' and block.settings.gallery_image %}
          <div class="sf-gallery-item">
            <img src="{{ block.settings.gallery_image | img_url: '400x' }}" alt="Gallery image">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
  
  <section style="background: var(--sf-primary-bg); padding: 40px 20px;">
    <div style="max-width: 1200px; margin: 0 auto;">
      {% for block in section.blocks %}
        {% if block.type == 'text_block' %}
          <div style="margin: 40px 0; color: var(--sf-primary-text);">
            {{ block.settings.text_content }}
          </div>
        {% elsif block.type == 'image_block' %}
          <div style="margin: 40px 0;">
            {% if block.settings.block_image %}
              <img src="{{ block.settings.block_image | img_url: '1200x' }}" alt="{{ block.settings.image_alt }}" style="width: 100%; border-radius: 12px; border: 1px solid {{ section.settings.image_border_color }};">
            {% endif %}
          </div>
        {% elsif block.type == 'video_block' %}
          <div style="margin: 40px 0;">
            <div class="sf-video-container">
              <iframe src="{{ block.settings.block_video_url }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
  
</div>

