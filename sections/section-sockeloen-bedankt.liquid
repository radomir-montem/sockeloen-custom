            <button class="sb-faq-q" type="button" aria-expanded="false">
              <span>{{ block.settings.question }}</span>
              <span class="sb-faq-icon">+</span>
            </button>
            <div class="sb-faq-a" hidden>
              <p>{{ block.settings.answer }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>

  <hr class="sb-divider">
  {% endif %}

