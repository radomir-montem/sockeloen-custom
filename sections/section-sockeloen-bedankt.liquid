{%- style -%}
  .sb-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    position: relative;
    overflow: hidden;
  }
  {% if section.settings.show_grid %}
  .sb-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient({{ section.settings.grid_color }} 1px, transparent 1px),
      linear-gradient(90deg, {{ section.settings.grid_color }} 1px, transparent 1px);
    background-size: {{ section.settings.grid_size }}px {{ section.settings.grid_size }}px;
    opacity: {{ section.settings.grid_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 0;
  }
  {% endif %}
  .sb-{{ section.id }} .sb-accent        { color: {{ section.settings.accent }}; }
  .sb-{{ section.id }} .sb-badge         { background: {{ section.settings.accent }}; color: #000; }
  .sb-{{ section.id }} .sb-cta           { background: {{ section.settings.accent }}; color: #000; border-radius: {{ section.settings.btn_radius }}px; }
  .sb-{{ section.id }} .sb-cta:hover     { background: {{ section.settings.accent_hover }}; }
  .sb-{{ section.id }} .sb-step-num      { background: {{ section.settings.accent }}; color: #000; }
  .sb-{{ section.id }} .sb-faq-item.open .sb-faq-icon { background: {{ section.settings.accent }}; color: #000; }
  .sb-{{ section.id }} .sb-review-card   { border-color: #e8e8e8; }
  .sb-{{ section.id }} .sb-divider       { border-color: #e8e8e8; }
{%- endstyle -%}

<div class="sb-{{ section.id }}">
<div class="sb-inner">

