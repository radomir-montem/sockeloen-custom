  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <section class="sb-hero">
    <div class="sb-hero-icon">ðŸŽ‰</div>
    <div class="sb-badge">{{ section.settings.badge }}</div>
    <h1 class="sb-h1">{{ section.settings.hero_title }}</h1>
    <p class="sb-hero-sub">{{ section.settings.hero_subtitle }}</p>

    <!-- What happens next -->
    <div class="sb-next-steps">
      <p class="sb-next-label">{{ section.settings.next_label }}</p>
      <div class="sb-steps">
        <div class="sb-step">
          <div class="sb-step-num">1</div>
          <div class="sb-step-text">
            <strong>{{ section.settings.step1_title }}</strong>
            <span>{{ section.settings.step1_body }}</span>
          </div>
        </div>
        <div class="sb-step">
          <div class="sb-step-num">2</div>
          <div class="sb-step-text">
            <strong>{{ section.settings.step2_title }}</strong>
            <span>{{ section.settings.step2_body }}</span>
          </div>
        </div>
        <div class="sb-step">
          <div class="sb-step-num">3</div>
          <div class="sb-step-text">
            <strong>{{ section.settings.step3_title }}</strong>
            <span>{{ section.settings.step3_body }}</span>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA while waiting -->
    {% if section.settings.show_whatsapp %}
    <a href="{{ section.settings.whatsapp_url }}" class="sb-cta sb-cta-hero" target="_blank" rel="noopener">
      {{ section.settings.whatsapp_label }}
    </a>
    <p class="sb-cta-note">{{ section.settings.cta_note }}</p>
    {% endif %}
  </section>

  <hr class="sb-divider">

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       TRUSTED BY LOGOS
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  {% if section.settings.show_logos %}
  <section class="sb-logos-section">
    <p class="sb-logos-label">{{ section.settings.logos_label }}</p>
    <div class="sb-logos-track-wrap">
      <div class="sb-logos-track">
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="sb-logo-item" {{ block.shopify_attributes }}>
              {% if block.settings.logo_image != blank %}
                <img src="{{ block.settings.logo_image | image_url: width: 160 }}" alt="{{ block.settings.logo_alt | default: 'Brand' | escape }}" loading="lazy">
              {% else %}
                <span class="sb-logo-placeholder">{{ block.settings.logo_alt | default: 'Brand' }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <!-- Duplicate for seamless scroll -->
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div class="sb-logo-item" aria-hidden="true">
              {% if block.settings.logo_image != blank %}
                <img src="{{ block.settings.logo_image | image_url: width: 160 }}" alt="" loading="lazy">
              {% else %}
                <span class="sb-logo-placeholder">{{ block.settings.logo_alt }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
