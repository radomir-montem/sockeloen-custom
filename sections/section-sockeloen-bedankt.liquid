    </a>
  </section>

</div>
</div>

<!-- â•â• FAQ ACCORDION JS â•â• -->
<script>
document.getElementById('sbFaqList').addEventListener('click', function(e) {
  var btn = e.target.closest('.sb-faq-q');
  if (!btn) return;
  var item   = btn.closest('.sb-faq-item');
  var answer = item.querySelector('.sb-faq-a');
  var icon   = btn.querySelector('.sb-faq-icon');
  var isOpen = item.classList.contains('open');

  // Close all
  document.querySelectorAll('.sb-faq-item.open').forEach(function(el) {
    el.classList.remove('open');
    el.querySelector('.sb-faq-a').hidden = true;
    el.querySelector('.sb-faq-q').setAttribute('aria-expanded', 'false');
    el.querySelector('.sb-faq-icon').textContent = '+';
  });

  if (!isOpen) {
    item.classList.add('open');
    answer.hidden = false;
    btn.setAttribute('aria-expanded', 'true');
    icon.textContent = 'Ã—';
  }
});
</script>

