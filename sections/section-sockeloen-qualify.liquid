{%- style -%}
  .sq-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    min-height: 100vh;
    padding: {{ section.settings.padding_top }}px 16px {{ section.settings.padding_bottom }}px;
    position: relative;
    overflow: hidden;
  }
  {% if section.settings.show_grid %}
  .sq-{{ section.id }}::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient({{ section.settings.grid_color }} 1px, transparent 1px),
      linear-gradient(90deg, {{ section.settings.grid_color }} 1px, transparent 1px);
    background-size: {{ section.settings.grid_size }}px {{ section.settings.grid_size }}px;
    opacity: {{ section.settings.grid_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 0;
  }
  {% endif %}
  .sq-{{ section.id }} .sq-accent       { color: {{ section.settings.accent }}; }
  .sq-{{ section.id }} .sq-badge        { background: {{ section.settings.accent }}; color: #000; }
  .sq-{{ section.id }} .sq-progress-bar { background: {{ section.settings.accent }}; }
  .sq-{{ section.id }} .sq-opt.chosen,
  .sq-{{ section.id }} .sq-opt:hover    { border-color: {{ section.settings.accent }}; background: rgba(255,140,0,.05); }
  .sq-{{ section.id }} .sq-opt.chosen .sq-check { background: {{ section.settings.accent }}; border-color: {{ section.settings.accent }}; }
  .sq-{{ section.id }} .sq-input:focus  { border-color: {{ section.settings.accent }}; box-shadow: 0 0 0 3px rgba(255,140,0,.15); }
  .sq-{{ section.id }} .sq-cta          { background: {{ section.settings.accent }}; color: #000; border-radius: {{ section.settings.btn_radius }}px; }
  .sq-{{ section.id }} .sq-cta:hover    { background: {{ section.settings.accent_hover }}; transform: translateY(-1px); }
  .sq-{{ section.id }} .sq-card         { background: {{ section.settings.card_bg }}; border: 1px solid {{ section.settings.card_border }}; border-radius: {{ section.settings.card_radius }}px; }
{%- endstyle -%}

<section class="sq-{{ section.id }}">
<div class="sq-inner">

  <!-- ‚îÄ‚îÄ PAGE HEADER ‚îÄ‚îÄ -->
  <header class="sq-header">
    <div class="sq-badge">{{ section.settings.badge }}</div>
    <h1 class="sq-h1">{{ section.settings.headline }}</h1>
    <p class="sq-sub">{{ section.settings.subline }}</p>
    <div class="sq-proof">
      <div class="sq-proof-avatars">
        <i></i><i></i><i></i><i></i><i></i>
      </div>
      <span>{{ section.settings.social_proof }}</span>
