        <h2 class="sq-step-h">{{ section.settings.q5_title }}</h2>
        <div class="sq-opts" data-group="quantity">
          <label class="sq-opt" data-val="under100" data-dq="quantity">
            <span class="sq-opt-icon">üì¶</span>
            <span class="sq-opt-text">Minder dan 100 paar</span>
            <span class="sq-check"></span>
          </label>
          <label class="sq-opt" data-val="200">
            <span class="sq-opt-icon">üì¶</span>
            <span class="sq-opt-text">200 paar</span>
            <span class="sq-check"></span>
          </label>
          <label class="sq-opt" data-val="500">
            <span class="sq-opt-icon">üî•</span>
            <span class="sq-opt-text">500 paar <span class="sq-popular">Meest gekozen</span></span>
            <span class="sq-check"></span>
          </label>
          <label class="sq-opt" data-val="2000">
            <span class="sq-opt-icon">üè≠</span>
