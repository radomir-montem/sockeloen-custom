      <div class="sq-step is-active" data-step="1">
        <p class="sq-eyebrow">Laten we beginnen</p>
        <h2 class="sq-step-h">{{ section.settings.q1_title }}</h2>
        <div class="sq-opts" data-group="timeline">
          <label class="sq-opt" data-val="4weeks" data-dq="timeline">
            <span class="sq-opt-icon">‚ö°</span>
