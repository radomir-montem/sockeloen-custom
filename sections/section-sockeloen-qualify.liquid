      </div>

    </form>

    <button type="button" class="sq-back hidden" id="sqBack">‚Üê Terug</button>

  </div>
  <!-- /sq-card -->

  <!-- ‚îÄ‚îÄ DISQUALIFY PANEL ‚îÄ‚îÄ -->
  <div class="sq-dq hidden" id="sqDQ">
    <div class="sq-dq-icon" id="sqDQIcon">‚ö†Ô∏è</div>
    <h2 class="sq-dq-title" id="sqDQTitle">Onze minimale bestelling is 200 paar</h2>
    <p class="sq-dq-body" id="sqDQBody">We zijn een productiepartner voor merken die 200+ paar bestellen. Voor kleinere aantallen raden we een lokale drukker of Printful aan.</p>
    <a href="{{ section.settings.dq_url }}" class="sq-cta sq-dq-btn">{{ section.settings.dq_cta }}</a>
  </div>

</div>
</section>

<script>
(function(){
  // ‚îÄ‚îÄ CONFIG (set via theme editor) ‚îÄ‚îÄ
  var WEBHOOK     = {{ section.settings.zapier_url | json }};
  var THANKYOU    = {{ section.settings.thankyou_url | json }};
  var DQ_URL      = {{ section.settings.dq_url | json }};
  var GTM_NAME    = 'sockeloen_qualify';

  // DQ messages per reason
  var DQ_MESSAGES = {
    timeline: {
      icon:  '‚è±',
      title: 'We kunnen dit niet binnen 4 weken leveren',
      body:  'Onze productietijd is minimaal 4‚Äì6 weken. Neem contact op als je een rushorder nodig hebt, dan kijken we wat mogelijk is.'
    },
    quantity: {
      icon:  'üì¶',
      title: 'Onze minimale bestelling is 200 paar',
      body:  'We werken met merken die 200+ paar bestellen. Voor kleinere aantallen raden we Printful of een lokale drukker aan.'
    }
  };

  // ‚îÄ‚îÄ STATE ‚îÄ‚îÄ
  var step     = 1;
  var total    = 7;
  var history  = [];
  var data     = {};

  // ‚îÄ‚îÄ DOM ‚îÄ‚îÄ
  var form     = document.getElementById('sqForm');
  var card     = document.getElementById('sqCard');
  var backBtn  = document.getElementById('sqBack');
  var progBar  = document.getElementById('sqBar');
  var progLbl  = document.getElementById('sqProgLabel');
  var dqPanel  = document.getElementById('sqDQ');

  // ‚îÄ‚îÄ GTM HELPER ‚îÄ‚îÄ
  function gtm(event, payload) {
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push(Object.assign({ event: GTM_NAME + '_' + event }, payload));
  }

  // ‚îÄ‚îÄ UPDATE PROGRESS ‚îÄ‚îÄ
  function setProgress(s) {
    var pct = Math.round((s / total) * 100);
    progBar.style.width = pct + '%';
    progLbl.textContent = 'Stap ' + s + ' van ' + total;
  }

  // ‚îÄ‚îÄ SHOW STEP ‚îÄ‚îÄ
  function showStep(n) {
    document.querySelectorAll('.sq-step').forEach(function(el){ el.classList.remove('is-active'); });
    var target = document.querySelector('[data-step="' + n + '"]');
    if (target) {
      target.classList.add('is-active');
      card.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
    backBtn.classList.toggle('hidden', n === 1);
    setProgress(n);
    step = n;
    gtm('step_view', { step: n });
  }

  // ‚îÄ‚îÄ VALIDATE ‚îÄ‚îÄ
  function validate(field) {
    var val, ok;
    if (field === 'name') {
      val = document.getElementById('sqName').value.trim();
      ok  = val.length >= 2;
      document.getElementById('e2').classList.toggle('hidden', ok);
      if (ok) { data.firstname = val; document.getElementById('sqGreet').textContent = 'Top, ' + val + '!'; }
    } else if (field === 'email') {
      val = document.getElementById('sqEmail').value.trim();
      ok  = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(val);
      document.getElementById('e3').classList.toggle('hidden', ok);
      if (ok) data.email = val;
    } else if (field === 'phone') {
      val = document.getElementById('sqPhone').value.trim();
      ok  = val.length >= 7;
      document.getElementById('e4').classList.toggle('hidden', ok);
      if (ok) data.phone = val;
    } else if (field === 'brief') {
      val = document.getElementById('sqBrief').value.trim();
      ok  = val.length >= 10;
      document.getElementById('e6').classList.toggle('hidden', ok);
      if (ok) data.brief = val;
    }
    return ok;
  }

  // ‚îÄ‚îÄ DISQUALIFY ‚îÄ‚îÄ
  function disqualify(reason) {
    var msg = DQ_MESSAGES[reason] || DQ_MESSAGES.quantity;
    document.getElementById('sqDQIcon').textContent  = msg.icon;
    document.getElementById('sqDQTitle').textContent = msg.title;
    document.getElementById('sqDQBody').textContent  = msg.body;
    card.classList.add('hidden');
    dqPanel.classList.remove('hidden');
    gtm('disqualified', { reason: reason, step: step });
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // ‚îÄ‚îÄ OPTION CLICK ‚îÄ‚îÄ
  document.querySelectorAll('.sq-opts').forEach(function(group) {
    group.addEventListener('click', function(e) {
      var opt = e.target.closest('.sq-opt');
      if (!opt) return;
      var grp = group.dataset.group;

      // Deselect others
      group.querySelectorAll('.sq-opt').forEach(function(o){ o.classList.remove('chosen'); });
      opt.classList.add('chosen');

      var val = opt.dataset.val;
      var dq  = opt.dataset.dq;
      data[grp] = val;

      // Clear error
      var errEl = document.getElementById('e' + step);
      if (errEl) errEl.classList.add('hidden');

      gtm('option_select', { field: grp, value: val });

      // Auto-advance after short delay (feels snappy on mobile)
      setTimeout(function() {
        if (dq) {
          disqualify(dq);
        } else {
          history.push(step);
          showStep(step + 1);
        }
      }, 280);
    });
  });

  // ‚îÄ‚îÄ NEXT BUTTON ‚îÄ‚îÄ
  document.querySelectorAll('.sq-next').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var field = btn.dataset.v;
      var to    = parseInt(btn.dataset.to);
      if (validate(field)) {
        history.push(step);
        gtm('step_complete', { step: step, field: field, value: data[field] });
        showStep(to);
      }
    });
  });

  // ‚îÄ‚îÄ BACK BUTTON ‚îÄ‚îÄ
  backBtn.addEventListener('click', function() {
    if (history.length) {
      step = history.pop();
      showStep(step);
    }
  });

  // ‚îÄ‚îÄ FILE UPLOAD LABEL ‚îÄ‚îÄ
  document.getElementById('sqLogo').addEventListener('change', function() {
    var file = this.files[0];
    if (file) {
      document.getElementById('sqUploadText').textContent = '‚úÖ ' + file.name;
      data.logo_name = file.name;
    }
  });

  // ‚îÄ‚îÄ BUILD REVIEW CARD ‚îÄ‚îÄ
  function buildReview() {
    var labels = {
      timeline: { '4weeks':'Binnen 4 weken','8weeks':'Binnen 8 weken','no_deadline':'Geen deadline' },
      quantity:  { 'under100':'< 100 paar','200':'200 paar','500':'500 paar','2000':'2.000 paar','5000':'5.000+ paar' }
    };
    var rows = [
      ['Naam',      data.firstname || '‚Äî'],
      ['E-mail',    data.email     || '‚Äî'],
      ['Telefoon',  data.phone     || '‚Äî'],
      ['Deadline',  labels.timeline[data.timeline] || '‚Äî'],
      ['Aantal',    labels.quantity[data.quantity]  || '‚Äî'],
      ['Ontwerp',   data.brief ? data.brief.substring(0,60) + '‚Ä¶' : '‚Äî'],
      ['Logo',      data.logo_name || 'Niet ge√ºpload']
    ];
    var html = rows.map(function(r){
      return '<div class="sq-review-row"><span class="sq-review-label">'+ r[0] +'</span><span class="sq-review-val">'+ r[1] +'</span></div>';
    }).join('');
    document.getElementById('sqReview').innerHTML = html;
  }

  // Rebuild review whenever step 7 becomes active
  var observer = new MutationObserver(function(mutations) {
    mutations.forEach(function(m) {
      if (m.target.dataset.step === '7' && m.target.classList.contains('is-active')) {
        buildReview();
      }
    });
  });
  document.querySelectorAll('.sq-step').forEach(function(el){
    observer.observe(el, { attributes: true, attributeFilter: ['class'] });
  });

  // ‚îÄ‚îÄ SUBMIT ‚îÄ‚îÄ
  form.addEventListener('submit', function(e) {
    e.preventDefault();

    // Collect logo as base64 if provided
    var logoFile = document.getElementById('sqLogo').files[0];
    data.brief   = document.getElementById('sqBrief').value.trim();

    var submitBtn   = document.getElementById('sqSubmit');
    var submitLabel = document.getElementById('sqSubmitLabel');
    var submitLoad  = document.getElementById('sqSubmitLoading');

    submitBtn.disabled = true;
    submitLabel.classList.add('hidden');
    submitLoad.classList.remove('hidden');

    gtm('form_submit', { email: data.email, quantity: data.quantity });

    function sendToZapier(logoBase64) {
      var payload = {
        firstname: data.firstname,
        email:     data.email,
        phone:     data.phone,
        timeline:  data.timeline,
        quantity:  data.quantity,
        brief:     data.brief,
        logo_name: data.logo_name || '',
        logo_base64: logoBase64 || '',
        source:    'sockeloen_qualify_form',
        submitted_at: new Date().toISOString()
      };

      if (!WEBHOOK || WEBHOOK === '') {
        // No webhook configured ‚Äî still redirect
        gtm('form_completed', { email: data.email });
        window.location.href = THANKYOU || '/pages/bedankt';
        return;
      }

      fetch(WEBHOOK, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      })
      .then(function() {
        gtm('form_completed', { email: data.email, quantity: data.quantity });
        window.location.href = THANKYOU || '/pages/bedankt';
      })
      .catch(function() {
        submitBtn.disabled = false;
        submitLabel.classList.remove('hidden');
        submitLoad.classList.add('hidden');
        document.getElementById('e7').classList.remove('hidden');
        gtm('form_error', { step: 7 });
      });
    }

    if (logoFile) {
      var reader = new FileReader();
      reader.onload = function(ev) { sendToZapier(ev.target.result); };
      reader.readAsDataURL(logoFile);
    } else {
      sendToZapier('');
    }
  });

  // ‚îÄ‚îÄ INIT ‚îÄ‚îÄ
  gtm('form_start', {});
  showStep(1);

})();
</script>

