{{ 'section-usp-features.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .usp-features-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .usp-features-{{ section.id }} .usp-card {
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }
  
  .usp-features-{{ section.id }} .usp-icon-wrapper {
    background-color: {{ section.settings.icon_background }};
  }
  
  .usp-features-{{ section.id }} .usp-title {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
  }
  
  .usp-features-{{ section.id }} .usp-description {
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
  }
{%- endstyle -%}

<div class="usp-features usp-features-{{ section.id }}">
  <div class="page-width">
    <div class="usp-grid">
      {% for block in section.blocks %}
        {% if block.type == 'usp_item' %}
          <div class="usp-card" {{ block.shopify_attributes }}>
            {% if block.settings.icon_image != blank %}
              <div class="usp-icon-wrapper">
                <img 
                  src="{{ block.settings.icon_image | image_url: width: 100 }}"
                  alt="{{ block.settings.title | escape }}"
                  class="usp-icon"
                  loading="lazy"
                >
              </div>
            {% endif %}
            
            <div class="usp-content">
              <h3 class="usp-title">{{ block.settings.title }}</h3>
              {% if block.settings.description != blank %}
                <p class="usp-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

