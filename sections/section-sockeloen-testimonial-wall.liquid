{{ 'section-sockeloen-testimonial-wall.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .tw-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .tw-section-{{ section.id }} .tw-quote-text {
    color: {{ section.settings.quote_color }};
    font-size: {{ section.settings.quote_size }}px;
  }
  .tw-section-{{ section.id }} .tw-quote-author {
    color: {{ section.settings.author_color }};
  }
{%- endstyle -%}

<section class="tw-section tw-section-{{ section.id }}">

  {% if section.settings.show_quote %}
  <div class="tw-quote-wrap">
    <div class="page-width">
      <blockquote class="tw-blockquote">
        <p class="tw-quote-text">&ldquo;{{ section.settings.quote_text }}&rdquo;</p>
        <cite class="tw-quote-author">{{ section.settings.quote_author }}</cite>
      </blockquote>
    </div>
  </div>
  {% endif %}

  {% if section.settings.show_wall %}
  <div class="tw-wall">

    <!-- Row 1 scrolls left -->
    <div class="tw-row tw-row--left">
      <div class="tw-track">
        {% for block in section.blocks %}
          {% if block.type == 'row1_image' %}
            <div class="tw-card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 440 }}" alt="{{ block.settings.alt | default: 'Result' | escape }}" loading="lazy">
              {% else %}
                <div class="tw-card-empty"><span>Add Row 1 image</span></div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <!-- Duplicate set for seamless loop -->
        {% for block in section.blocks %}
          {% if block.type == 'row1_image' %}
            <div class="tw-card" aria-hidden="true">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 440 }}" alt="" loading="lazy">
              {% else %}
                <div class="tw-card-empty"></div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- Row 2 scrolls right -->
    <div class="tw-row tw-row--right">
      <div class="tw-track">
        {% for block in section.blocks %}
          {% if block.type == 'row2_image' %}
            <div class="tw-card" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 440 }}" alt="{{ block.settings.alt | default: 'Result' | escape }}" loading="lazy">
              {% else %}
                <div class="tw-card-empty"><span>Add Row 2 image</span></div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <!-- Duplicate set for seamless loop -->
        {% for block in section.blocks %}
          {% if block.type == 'row2_image' %}
            <div class="tw-card" aria-hidden="true">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url: width: 440 }}" alt="" loading="lazy">
              {% else %}
                <div class="tw-card-empty"></div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

  </div>
  {% endif %}

</section>

{% schema %}
{
  "name": "Testimonial Wall",
  "settings": [
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0d0d0d"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 20,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 20,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    },
    {
      "type": "header",
      "content": "Quote"
    },
    {
      "type": "checkbox",
      "id": "show_quote",
      "label": "Show Quote",
      "default": true
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "The quality, the speed, the results. Everything was incredible. I'd give them a 10/10 overall."
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Author & Title",
      "default": "Jan de Vries, Marketing Manager at MAAP"
    },
    {
      "type": "color",
      "id": "quote_color",
      "label": "Quote Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "quote_size",
      "min": 18,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Quote Font Size",
      "default": 30
    },
    {
      "type": "color",
      "id": "author_color",
      "label": "Author Color",
      "default": "#777777"
    },
    {
      "type": "header",
      "content": "Image Wall"
    },
    {
      "type": "checkbox",
      "id": "show_wall",
      "label": "Show Image Wall",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "row1_image",
      "name": "Row 1 Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt Text",
          "default": "Customer result"
        }
      ]
    },
    {
      "type": "row2_image",
      "name": "Row 2 Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt Text",
          "default": "Customer result"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial Wall",
      "blocks": [
        { "type": "row1_image" },
        { "type": "row1_image" },
        { "type": "row1_image" },
        { "type": "row1_image" },
        { "type": "row1_image" },
        { "type": "row2_image" },
        { "type": "row2_image" },
        { "type": "row2_image" },
        { "type": "row2_image" },
        { "type": "row2_image" }
      ]
    }
  ]
}
{% endschema %}
