{{ 'section-contact-info.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .contact-info-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .contact-info-{{ section.id }} h2 {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
  }
  
  .contact-info-{{ section.id }} p {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
  }
  
  .contact-info-{{ section.id }} .contact-card {
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }
  
  .contact-info-{{ section.id }} .contact-link {
    color: {{ section.settings.link_color }};
    font-size: {{ section.settings.link_size }}px;
  }
  
  .contact-info-{{ section.id }} .contact-link:hover {
    color: {{ section.settings.link_hover_color }};
  }
{%- endstyle -%}

{% if section.settings.show_section %}
<div class="contact-info contact-info-{{ section.id }}">
  <div class="page-width">
    <div class="contact-content">
      <h2>{{ section.settings.heading }}</h2>
      
      {% if section.settings.description != blank %}
        <p class="contact-description">{{ section.settings.description }}</p>
      {% endif %}
      
      <div class="contact-methods">
        {% if section.settings.email != blank %}
          <div class="contact-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8L10.89 13.26C11.2187 13.4793 11.6049 13.5963 12 13.5963C12.3951 13.5963 12.7813 13.4793 13.11 13.26L21 8M5 19H19C19.5304 19 20.0391 18.7893 20.4142 18.4142C20.7893 18.0391 21 17.5304 21 17V7C21 6.46957 20.7893 5.96086 20.4142 5.58579C20.0391 5.21071 19.5304 5 19 5H5C4.46957 5 3.96086 5.21071 3.58579 5.58579C3.21071 5.96086 3 6.46957 3 7V17C3 17.5304 3.21071 18.0391 3.58579 18.4142C3.96086 18.7893 4.46957 19 5 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <a href="mailto:{{ section.settings.email }}" class="contact-link">
              {{ section.settings.email }}
            </a>
          </div>
        {% endif %}
        
        {% if section.settings.phone != blank %}
          <div class="contact-card">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H8.27C8.5 3 8.72 3.11 8.85 3.29L11.08 6.58C11.18 6.71 11.23 6.87 11.23 7.03C11.23 7.14 11.21 7.25 11.17 7.36L9.62 10.79C10.4 12.34 11.66 13.6 13.21 14.38L16.64 12.83C16.75 12.79 16.86 12.77 16.97 12.77C17.13 12.77 17.29 12.82 17.42 12.92L20.71 15.15C20.89 15.28 21 15.5 21 15.73V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H17C8.16 21 3 15.84 3 7V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <a href="tel:{{ section.settings.phone }}" class="contact-link">
              {{ section.settings.phone }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "Contact Info",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
