{% comment %}
  Thank You Page Section for Custom Socks Lead Form
  Add this file to: sections/custom-socks-thank-you.liquid
{% endcomment %}

<style>
  .thank-you-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
  }

  .thank-you-container {
    max-width: 700px;
    width: 100%;
    background: white;
    border-radius: 20px;
    padding: 60px 50px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    text-align: center;
  }

  .success-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30px;
    animation: scaleIn 0.5s ease-out;
  }

  .success-icon svg {
    width: 45px;
    height: 45px;
    stroke: white;
    stroke-width: 3;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
    animation: checkmark 0.8s ease-out 0.3s both;
  }

  @keyframes scaleIn {
    from {
      transform: scale(0);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes checkmark {
    0% {
      stroke-dasharray: 0, 100;
    }
    100% {
      stroke-dasharray: 100, 100;
    }
  }

  .thank-you-heading {
    margin-bottom: 15px;
  }

  .thank-you-heading h1 {
    font-size: 36px;
    font-weight: 700;
    color: #2d3748;
    margin: 0;
    line-height: 1.2;
  }

  .thank-you-message {
    font-size: 18px;
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .divider {
    height: 2px;
    background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
    margin: 35px 0;
  }

  .next-steps {
    text-align: left;
    background: #f7fafc;
    padding: 30px;
    border-radius: 12px;
    margin: 30px 0;
  }

  .next-steps h3 {
    font-size: 20px;
    font-weight: 700;
    color: #2d3748;
    margin: 0 0 20px 0;
  }

  .next-steps ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .next-steps li {
    padding: 12px 0 12px 35px;
    position: relative;
    color: #4a5568;
    font-size: 15px;
    line-height: 1.6;
  }

  .next-steps li:before {
    content: "→";
    position: absolute;
    left: 0;
    color: #667eea;
    font-weight: bold;
    font-size: 20px;
  }

  .contact-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 30px 0;
  }

  .contact-card {
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 25px 20px;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    border-color: #667eea;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.15);
  }

  .contact-card-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px;
  }

  .contact-card-icon svg {
    width: 25px;
    height: 25px;
    stroke: white;
    fill: none;
    stroke-width: 2;
  }

  .contact-card h4 {
    font-size: 16px;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 8px 0;
  }

  .contact-card a {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
  }

  .contact-card a:hover {
    text-decoration: underline;
  }

  .cta-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 30px;
  }

  .btn {
    padding: 16px 32px;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
  }

  .social-proof {
    margin-top: 35px;
    padding-top: 35px;
    border-top: 1px solid #e2e8f0;
  }

  .social-proof p {
    color: #718096;
    font-size: 14px;
    margin: 0 0 15px 0;
  }

  .rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .stars {
    color: #fbbf24;
    font-size: 20px;
  }

  .rating-text {
    color: #2d3748;
    font-weight: 600;
    font-size: 15px;
  }

  @media (max-width: 768px) {
    .thank-you-section {
      padding: 40px 15px;
    }

    .thank-you-container {
      padding: 40px 30px;
    }

    .thank-you-heading h1 {
      font-size: 28px;
    }

    .contact-cards {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<div class="thank-you-section">
  <div class="thank-you-container">
    <div class="success-icon">
      <svg viewBox="0 0 52 52">
        <polyline points="14 27 22 35 38 19"/>
      </svg>
    </div>

    <div class="thank-you-heading">
      <h1>{{ section.settings.heading }}</h1>
    </div>

    <p class="thank-you-message">
      {{ section.settings.message }}
    </p>

    <div class="divider"></div>

    {% if section.settings.show_next_steps %}
      <div class="next-steps">
        <h3>{{ section.settings.next_steps_title }}</h3>
        <ul>
          {% if section.settings.step_1 != blank %}
            <li>{{ section.settings.step_1 }}</li>
          {% endif %}
          {% if section.settings.step_2 != blank %}
            <li>{{ section.settings.step_2 }}</li>
          {% endif %}
          {% if section.settings.step_3 != blank %}
            <li>{{ section.settings.step_3 }}</li>
          {% endif %}
          {% if section.settings.step_4 != blank %}
            <li>{{ section.settings.step_4 }}</li>
          {% endif %}
        </ul>
      </div>
    {% endif %}

    {% if section.settings.show_contact_cards %}
      <div class="contact-cards">
        <div class="contact-card">
          <div class="contact-card-icon">
            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h4>Bel ons</h4>
          <a href="tel:{{ section.settings.phone | replace: ' ', '' }}">{{ section.settings.phone }}</a>
        </div>

        <div class="contact-card">
          <div class="contact-card-icon">
            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <h4>WhatsApp</h4>
          <a href="https://wa.me/{{ section.settings.whatsapp | replace: ' ', '' | replace: '+', '' }}" target="_blank">Stuur bericht</a>
        </div>

        <div class="contact-card">
          <div class="contact-card-icon">
            <svg viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h4>E-mail</h4>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </div>
      </div>
    {% endif %}

    <div class="cta-buttons">
      {% if section.settings.primary_button_link != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}
      {% if section.settings.secondary_button_link != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn btn-secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.show_social_proof %}
      <div class="social-proof">
        <p>{{ section.settings.social_proof_text }}</p>
        <div class="rating">
          <span class="stars">★★★★★</span>
          <span class="rating-text">{{ section.settings.rating_text }}</span>
        </div>
      </div>
    {% endif %}
  </div>
</div>

