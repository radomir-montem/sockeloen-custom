{% assign tempalte_suffix = template.suffix | handleize %}
{% if tempalte_suffix == 'forms-free-sample-design' %}
  <div class="custom-header flex justify-between items-center">
    <a class="flex items-center" href="{{ settings.custom_form_phone_link }}" target="_blank">
      <div class="custom-header__icon relative overflow-hidden">
        {% if settings.custom_form_phone_icon != blank %}
          {{ settings.custom_form_phone_icon | image_url: width: 100 | image_tag }}
        {% endif %}
      </div>
      <div class="custom-header__link small-hide" style="margin-left: 15px;">{{ settings.custom_form_phone_number }}</div>
    </a>
    <a class="custom-header__logo" href="{{ shop.url }}">
      {{ settings.custom_form_logo | image_url: width: 200 | image_tag  }}
    </a>
    <a class="flex items-center" href="{{ settings.custom_form_whatsapp_link }}" target="_blank">
      <div class="custom-header__link small-hide" style="margin-right: 15px;">{{ settings.custom_form_whatsapp_label }}</div>
      <div class="custom-header__icon relative overflow-hidden">
        {% if settings.custom_form_whatsapp_icon != blank %}
          {{ settings.custom_form_whatsapp_icon | image_url: width: 100 | image_tag }}
        {% endif %}
      </div>
    </a>
  </div>
{% endif %}

<div class="{% if section.settings.include_margins %}page-width{% endif %}">
  {% if tempalte_suffix == 'forms-free-sample-design' %}
  {% endif %}
  {%- for block in section.blocks -%}
    {% if block.type == 'image-block' %}
      {% render 'image-block', block: block %}
    {% else %}
      {% render block %}
    {% endif %}
  {%- endfor -%}
</div> 

