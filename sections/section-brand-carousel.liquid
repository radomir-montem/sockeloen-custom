{{ 'section-brand-carousel.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .brand-carousel-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .brand-carousel-{{ section.id }} h2 {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
  }
  
  .brand-carousel-{{ section.id }} .carousel-track {
    animation-duration: {{ section.settings.scroll_speed }}s;
  }
  
  .brand-carousel-{{ section.id }} .brand-logo-wrapper {
    opacity: {{ section.settings.logo_opacity | divided_by: 100.0 }};
    filter: grayscale({{ section.settings.logo_grayscale }}%);
  }
  
  .brand-carousel-{{ section.id }} .brand-logo-wrapper:hover {
    opacity: 1;
    filter: grayscale(0%);
  }
{%- endstyle -%}

<div class="brand-carousel brand-carousel-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="carousel-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="carousel-container">
      <div class="carousel-track">
        {% for block in section.blocks %}
          {% if block.type == 'brand_logo' %}
            <div class="brand-logo-wrapper" {{ block.shopify_attributes }}>
              {% if block.settings.logo != blank %}
                <img 
                  src="{{ block.settings.logo | image_url: width: 200 }}"
                  alt="{{ block.settings.alt_text | escape }}"
                  loading="lazy"
                  class="brand-logo"
                >
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        
        <!-- Duplicate logos for seamless loop -->
        {% for block in section.blocks %}
          {% if block.type == 'brand_logo' %}
            <div class="brand-logo-wrapper">
              {% if block.settings.logo != blank %}
                <img 
                  src="{{ block.settings.logo | image_url: width: 200 }}"
                  alt="{{ block.settings.alt_text | escape }}"
                  loading="lazy"
                  class="brand-logo"
                >
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

